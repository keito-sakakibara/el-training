<%= link_to "締め切りに近い順", tasks_path(for_order_column: :deadline_date, asc_or_desc: "asc") %>
<%= link_to "締め切りに遠い順", tasks_path(for_order_column: :deadline_date, asc_or_desc: "desc") %>
<%= link_to "優先順位が高い順", tasks_path(for_order_column: :priority_id, asc_or_desc: "asc") %>
<%= link_to "優先順位が低い順", tasks_path(for_order_column: :priority_id, asc_or_desc: "desc") %>

<%= form_with url:tasks_path, method: :get, local: true do |f| %>
  <%= f.label :name, '名前' %> 
  <%= f.text_field :name %>
  <%= f.label :status_id, 'ステータス' %> 
  <%= f.collection_select(:status_id,Status.all, :id, :name )%>
  <%= f.submit '検索' %> 
<% end %>

<h1>一覧</h1>
<hr>
<ul>
  <% @tasks.each do |task| %>
    <li> 
      <% if @tasks%>
        <%= link_to task.name, task, {class: "task"}%>
      <% else %>
        <p>タスクがありません</p>
      <%end%>
    </li>
  <% end %>
</ul>

<div class = "back">
  <%= link_to "作成", new_task_path, {class: "back_button"} %>
</div>
