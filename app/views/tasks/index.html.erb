<%= link_to "締め切りに近い順", tasks_path(deadline_date_sort_type: "asc")%>
<%= link_to "締め切りに遠い順", tasks_path(deadline_date_sort_type: "desc")%>

<%= form_with url:tasks_path, method: :get, local: true do |f| %>
  <%= f.label :name, 'Sarch status' %> 
    <%= f.text_field :name %>
    <%= f.collection_select(:status_id,@statuses, :id, :name )%>
  <%= f.submit '検索' %> 
<% end %>

<h1>一覧</h1>
<hr>
<ul>
  <% @tasks.each do |task| %>
    <li> 
      <% if @tasks%>
        <%= link_to task.name, task, {class: "task"}%>
      <% else %>
        <p>タスクがありません</p>
      <%end%>
    </li>
  <% end %>
</ul>

<div class = "back">
  <%= link_to "作成", new_task_path, {class: "back_button"} %>
</div>
