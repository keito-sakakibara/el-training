<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<h1><%= @user.name %></h1>
<hr>
<p><%= @user.email %></p>
<table class="table">
    <thead>
      <tr>
        <td>タスク</td>
        <td>編集</td>
        <td>削除</td>
      </tr>
    </thead>
    <tbody>
      <% if @tasks %>
        <% @tasks.each do |task| %>
            <% if @tasks %>
            <tr>
                <td><%= link_to task.name, task %></td>
                <td><%= link_to "編集", edit_task_path(task),class: 'btn btn-success' %></td>
                <td><%= link_to '削除する', task, method: :delete, data:{ confirm: '本当に削除してよろしいですか？'}, class: "btn btn-danger" %></td>
            </tr>
            <% else %>
            <tr>
                <td>タスクがありません</td>
            </tr>
            <% end %>
        <% end %>
      <% end %>
    </tbody>
</table>

<%= paginate @tasks if @tasks %>
<hr>

<%= link_to "一覧へ",admin_users_path,class: 'btn btn-primary'%>

<%= link_to "編集", edit_admin_user_path(@user),class: 'btn btn-success' %>

<%= link_to '削除する', admin_user_path(@user), method: :delete, data:{ confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger' %>
